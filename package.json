{
  "name": "@place-framework/place-framework",
  "author": "Brian Kelley",
  "version": "3.0.0",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.js",
      "require": "./src/index.js"
    },
    "./constants": {
      "import": "./src/constants/index.js"
    },
    "./utils": {
      "import": "./src/utils/index.js"
    },
    "./scss/*": "./scss/*"
  },
  "files": [
    "src/",
    "scss/",
    "README.md"
  ],
  "license": "MIT Open Source",
  "scripts": {
    "discovery": "node src/utils/discovery.js",
    "prettier": "prettier --check \"scss/**/*.scss\"",
    "prettier:fix": "prettier --write \"scss/**/*.scss\"",
    "lint:scss": "npx stylelint \"scss/**/*.scss\"",
    "lint:scss:fix": "npx stylelint --fix \"scss/**/*.scss\""
  },
  "prettier": "./node_modules/@place-framework/code-config/prettier.config.js",
  "stylelint": {
    "extends": "@place-framework/code-config/stylelint.config"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/valespring/place-framework.git"
  },
  "description": "A modular and flexible CSS framework created for developers, by developers. Includes normal grid, flex grid, and CSS grid options.",
  "homepage": "https://github.com/valespring/place-framework.git#readme",
  "keywords": [
    "modular scss framework",
    "placeholder classes",
    "scss framework",
    "place framework"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/valespring/place-framework/issues"
  },
  "devDependencies": {
    "@place-framework/code-config": "^2.0.5",
    "prettier": "^3.3.3",
    "stylelint": "^16.8.2"
  }
}
